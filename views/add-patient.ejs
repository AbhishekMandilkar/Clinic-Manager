<%- include('header'); -%>
<div class="form-container">

    <form action="/add-patient" method="POST">
        <div class="form-group">
            <label for="exampleInputPassword1">Name</label>
            <input type="text" class="form-control" name="pName" >
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Phone Number</label>
            <input type="text" class="form-control" name="pMob" >
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Age</label>
            <input style="width: 350px;" type="number" class="form-control" id="exampleInputPassword1" name="pAge">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Gender</label>
            <input style="width: 350px;" type="text" class="form-control" id="exampleInputPassword1" name="pGender">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Blood Pressure</label>
            <input style="width: 350px;" type="Number" class="form-control" id="exampleInputPassword1" name="pBP">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Weight</label>
            <input style="width: 350px;" type="Number" class="form-control" id="exampleInputPassword1" name="pWeight" >
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Complaints</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" name="pComplaints"></textarea>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Extras</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="pExtra" rows="2"></textarea>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Next Visit date</label>
            <input style="width: 350px;" type="Date" class="form-control" name="nVisitdate" id="exampleInputPassword1">
          </div>

          <button class="btn btn-primary" style="margin-bottom: 10px;" type="submit" name="button">Add</button>
    </form>

</div>


<%- include('footer'); -%>